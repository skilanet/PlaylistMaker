<resources>

    <style name="Base.Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar" />

    <style name="background">
        <item name="android:background">@color/yp_black</item>
    </style>

    <style name="activity_main_background">
        <item name="android:background">@color/yp_black</item>
    </style>

    <style name="setting_textview_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginEnd">@dimen/settings_frame_margin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical">4dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">52dp</item>
        <item name="android:titleTextColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="find_text_style">
        <item name="android:textColorHint">@color/yp_black</item>
        <item name="android:textColor">@color/yp_black</item>
    </style>

    <style name="text_color">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="find_track_info_text_color">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="error_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="btn_update_clear">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="history_of_search_title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="activity_media_player_info">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">end</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="activity_media_player_top_info">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">start</item>
        <item name="android:lines">1</item>
    </style>

    <style name="activity_media_player_time_color">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="activity_media_player_snackbar">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/yp_black</item>
    </style>

    <style name="tablayout" parent="TextAppearance.Design.Tab">
        <item name="tabTextColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@color/yp_black</item>
        <item name="tabIndicatorColor">@color/white</item>
    </style>

    <style name="fragment_playlists_button">
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="bottom_nav_view">
        <item name="android:background">@color/yp_black</item>
    </style>

    <style name="add_playlist_text_input_layout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeColor">@drawable/text_field_outline</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="hintTextColor">@color/yp_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="item_playlist_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="fragment_playlist_bottom_sheet_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingVertical">21dp</item>
        <item name="layout_constraintEnd_toEndOf">@id/guideline_44_end_bottom_sheet</item>
        <item name="layout_constraintStart_toEndOf">@id/guideline_16_start_bottom_sheet</item>
    </style>
</resources>