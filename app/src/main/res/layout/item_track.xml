<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_find_track_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginVertical="8dp"
        android:layout_marginStart="13dp"
        android:importantForAccessibility="no"
        android:src="@drawable/placeholder"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_track_name"
        style="@style/text_color"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:fontFamily="@font/ys_display_regular"
        android:maxLines="1"
        android:textSize="@dimen/text_size_16sp"
        app:layout_constraintEnd_toStartOf="@id/iv_arrow_right"
        app:layout_constraintStart_toEndOf="@id/iv_find_track_image"
        app:layout_constraintTop_toTopOf="@id/iv_find_track_image"
        tools:text="dfjhdjfhjdhfjdhfjhdfjhdjhfjdhjfhjdhsldklskdlksodksldklskdllskdlskd" />

    <ImageView
        android:id="@+id/iv_arrow_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:importantForAccessibility="no"
        android:src="@drawable/arrow_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_track_author"
        style="@style/find_track_info_text_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="6dp"
        android:ellipsize="end"
        android:fontFamily="@font/ys_display_regular"
        android:maxLines="1"
        android:textSize="11sp"
        android:autoSizeMaxTextSize="45dp"
        app:layout_constrainedHeight="true"
        app:layout_constraintWidth_max="245dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_find_track_image"
        app:layout_constraintEnd_toStartOf="@id/iv_dot"
        app:layout_constraintStart_toStartOf="@id/tv_track_name"
        app:layout_constraintTop_toBottomOf="@id/tv_track_name"
        tools:text="sdsdsdksldkslsdsdksldkslkdlkslssdsdskdlskdlksldkldksldk" />

    <ImageView
        android:id="@+id/iv_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        android:src="@drawable/dot"
        app:layout_constraintBottom_toBottomOf="@id/tv_track_author"
        app:layout_constraintStart_toEndOf="@id/tv_track_author"
        app:layout_constraintTop_toTopOf="@id/tv_track_author" />

    <TextView
        android:id="@+id/tv_track_time"
        style="@style/find_track_info_text_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/ys_display_regular"
        android:maxLines="1"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_track_author"
        app:layout_constraintEnd_toStartOf="@id/iv_arrow_right"
        app:layout_constraintStart_toEndOf="@id/iv_dot"
        app:layout_constraintTop_toTopOf="@id/iv_dot"
        app:layout_constraintHorizontal_bias="0"
        tools:text="38:76" />

</androidx.constraintlayout.widget.ConstraintLayout>