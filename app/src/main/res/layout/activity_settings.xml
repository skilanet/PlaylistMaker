<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/settings_theme"
    android:orientation="vertical">

    <Toolbar
        style="@style/toolbar"
        android:id="@+id/settings_toolbar"
        android:title="@string/settings" />

    <FrameLayout
        style="@style/settings_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp">

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/sc_switch_light_night_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="282dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="11dp"
            android:paddingStart="9dp"
            android:paddingTop="11dp"
            android:paddingEnd="12dp"
            android:paddingBottom="11dp"
            app:thumbTint="@drawable/switch_thumb"
            app:trackTint="@drawable/switch_track"/>

        <TextView
            style="@style/setting_textview_style"
            android:layout_marginVertical="21dp"
            android:layout_marginStart="16dp"
            android:text="@string/switch_theme_text" />

    </FrameLayout>

    <FrameLayout
        style="@style/settings_frame_style">

        <ImageView
            android:id="@+id/iv_share_app"
            style="@style/settings_frame_image_style"
            android:src="@drawable/share"
            android:importantForAccessibility="no" />

        <TextView
            style="@style/setting_textview_style"
            android:text="@string/share_app_text" />

    </FrameLayout>

    <FrameLayout
        style="@style/settings_frame_style">

        <ImageView
            android:id="@+id/iv_write_to_support"
            style="@style/settings_frame_image_style"
            android:importantForAccessibility="no"
            android:src="@drawable/support" />

        <TextView
            style="@style/setting_textview_style"
            android:text="@string/write_to_support_text" />

    </FrameLayout>

    <FrameLayout
        style="@style/settings_frame_style">

        <ImageView
            android:id="@+id/iv_user_agreement"
            style="@style/settings_frame_image_style"
            android:importantForAccessibility="no"
            android:src="@drawable/arrow_right" />

        <TextView
            style="@style/setting_textview_style"
            android:text="@string/user_agreement_text" />

    </FrameLayout>


</LinearLayout>