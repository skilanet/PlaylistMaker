<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yp_blue"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_gravity="start"
        android:paddingTop="14dp"
        android:paddingBottom="12dp"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <Button
        android:id="@+id/find_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/main_button_hor_margin"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="@dimen/main_button_vertical_margin"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:foreground="?attr/selectableItemBackground"
        android:paddingHorizontal="@dimen/main_button_horizontal_padding"
        android:text="@string/button_find_text"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size"
        app:cornerRadius="@dimen/main_button_radius"
        app:icon="@drawable/find_icon"
        app:iconGravity="textStart"
        app:iconTint="@color/black"/>

    <Button
        android:id="@+id/media_library_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/main_button_hor_margin"
        android:layout_marginVertical="@dimen/main_button_vertical_margin"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:foreground="?attr/selectableItemBackground"
        android:paddingHorizontal="@dimen/main_button_horizontal_padding"
        android:text="@string/media_library"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size"
        app:cornerRadius="@dimen/main_button_radius"
        app:icon="@drawable/playlist_icon"
        app:iconGravity="textStart"
        app:iconTint="@color/black"/>

    <Button
        android:id="@+id/settings_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/main_button_hor_margin"
        android:layout_marginTop="@dimen/main_button_vertical_margin"
        android:layout_marginBottom="28dp"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:foreground="?attr/selectableItemBackground"
        android:paddingHorizontal="@dimen/main_button_horizontal_padding"
        android:text="@string/settings"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size"
        app:cornerRadius="@dimen/main_button_radius"
        app:icon="@drawable/settings_icon"
        app:iconGravity="textStart"
        app:iconTint="@color/black"/>


</LinearLayout>