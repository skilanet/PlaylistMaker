<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar" />

    <style name="background">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="activity_main_background">
        <item name="android:background">@color/yp_blue</item>
    </style>

    <style name="setting_textview_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginEnd">@dimen/settings_frame_margin</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical">4dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">52dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="find_text_style">
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <style name="text_color">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="find_track_info_text_color">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="error_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="btn_update_clear">
        <item name="android:backgroundTint">@color/yp_black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="history_of_search_title">
        <item name="android:textColor">@color/yp_black</item>
    </style>

    <style name="activity_media_player_info">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">end</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="activity_media_player_top_info">
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">start</item>
        <item name="android:lines">1</item>
    </style>

    <style name="activity_media_player_time_color">
        <item name="android:textColor">@color/yp_black</item>
    </style>

    <style name="activity_media_player_snackbar">
        <item name="android:background">@color/yp_black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tablayout" parent="TextAppearance.Design.Tab">
        <item name="tabTextColor">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@color/white</item>
        <item name="tabIndicatorColor">@color/yp_black</item>
    </style>

    <style name="fragment_playlists_button">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/yp_black</item>
    </style>
    <!-- Base application theme. -->
    <style name="Base.Base.Theme.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
</resources>