<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="activity_main_background">
        <item name="android:background">@color/yp_blue</item>
    </style>

    <style name="settings_theme">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="setting_textview_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginEnd">@dimen/settings_frame_margin</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/settings_activity_text_size </item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    
    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical">4dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">52dp</item>
        <item name="android:navigationIcon">@drawable/button_back_light</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="find_text_style">
        <item name="android:textColorHint">@color/find_color</item>
    </style>


</resources>